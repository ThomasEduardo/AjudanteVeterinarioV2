<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sarah.vetajudanteveterinarioandroid.activity.PerfilFazendaActivity">

    <TextView
        android:id="@+id/textViewProprietario"
        android:layout_width="464dp"
        android:layout_height="wrap_content"
        android:text="@string/name_of_owner"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="143dp"
        android:layout_above="@+id/edittextProprietarioPF"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.TextInputEditText
        android:layout_width="464dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="160dp"
        android:id="@+id/edittextProprietarioPF"
        android:layout_marginBottom="70dp"
        android:layout_above="@+id/textViewPropriedade"
        android:layout_alignStart="@+id/textViewProprietario" />

    <TextView
        android:id="@+id/textViewPropriedade"
        android:layout_width="464dp"
        android:layout_height="wrap_content"
        android:text="@string/name_of_farm"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="232dp"
        android:layout_above="@+id/edittextPropriedadePF"
        android:layout_alignStart="@+id/edittextPropriedadePF" />

    <android.support.design.widget.TextInputEditText
        android:layout_width="464dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="249dp"
        android:id="@+id/edittextPropriedadePF"
        android:layout_marginBottom="93dp"
        android:layout_above="@+id/textViewEmail"
        android:layout_alignStart="@+id/edittextProprietarioPF" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="464dp"
        android:layout_height="wrap_content"
        android:text="@string/prompt_email"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="326dp"
        android:layout_above="@+id/edittextEmailPF"
        android:layout_alignStart="@+id/edittextPropriedadePF" />

    <android.support.design.widget.TextInputEditText
        android:layout_width="464dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="343dp"
        android:id="@+id/edittextEmailPF"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/buttonIrAosAnimais"
        android:layout_alignStart="@+id/textViewEmail" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonAlterar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="38dp" />

    <Button
        android:id="@+id/buttonIrAosAnimais"
        style="@android:style/Widget.Material.Button"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/see_the_animals"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="441dp"
        tools:targetApi="lollipop"
        android:layout_marginBottom="82dp"
        android:layout_above="@+id/floatingActionButtonVoltarMenuPF"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonVoltarMenuPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:tint="@android:color/background_light"
        app:fabSize="mini"
        app:rippleColor="@color/colorPrimaryLight"
        app:srcCompat="@drawable/ic_keyboard_backspace_black_48dp"
        tools:layout_editor_absoluteY="511dp"
        tools:layout_editor_absoluteX="328dp"
        android:layout_marginStart="23dp"
        android:layout_alignTop="@+id/floatingActionButtonAlterar"
        android:layout_alignParentStart="true" />

</RelativeLayout>
